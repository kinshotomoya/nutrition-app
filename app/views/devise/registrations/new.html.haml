%body
  .login-back
    .row
      .col-md-4.col-md-offset-4
        .h3 このアプリの画像を貼る
        .login-panel.panel.panel-default.panel-margin
          .panel-heading
            %h3.panel-title 新規登録
          .panel-body
            =form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              %fieldset
                .form-group
                  =f.label :ニックネーム
                  =f.text_field :name, autofocus: true, placeholder: "例）キンショー", class: "form-control", required: true
                .form-group
                  =f.label :メールアドレス
                  =f.email_field :email, autofocus: true, placeholder: "例）food@gmail.com", class: "form-control", required: true
                .form-group
                  =f.label :パスワード
                  =f.password_field :password, autofocus: "off", placeholder: "password", class: "form-control", required: true
                .form-group
                  =f.label :パスワード（確認）
                  =f.password_field :password_confimation, autofocus: "off", placeholder: "password", class: "form-control", required: true
                =f.submit "新規登録", class: "btn btn-lg btn-success btn-block"
